@model BabzRent.ViewModels.ReportsViewModels.KPIRYearFormViewModel
@{
    ViewBag.Title = "KPIRYearForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function goBack() {
        window.history.back();
    }
</script>

<br>
<p class="btn btn-primary" onclick="goBack()"><< Back</p>

<h2>KPIR - Choose Property and Reporting Year</h2>

@using (Html.BeginForm("KPIRYearlyView", "Reports"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.LocationId)
        @Html.DropDownListFor(m => m.LocationId, new SelectList(Model.Locations, "Id", "ShortCode"), "Select Location", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LocationId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReportingYear)
        @Html.DropDownListFor(m => m.ReportingYear, new SelectList(Model.Dates), "Select Reporting Year", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReportingYear)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}