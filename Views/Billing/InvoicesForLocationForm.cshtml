@model BabzRent.ViewModels.BillingViewModels.LocationFormViewModel
@{
    ViewBag.Title = "InvoiceLocationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function goBack() {
        window.history.back();
    }
</script>

<br>
<p class="btn btn-primary" onclick="goBack()"><< Back</p>

<h2>Create Invoices At Location</h2>

<h2>Location</h2>
@using (Html.BeginForm("CreateInvoicesForLocation", "Billing"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.locationId)
        @Html.DropDownListFor(m => m.locationId, new SelectList(Model.Locations, "Id", "ShortCode"), "Select Location", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
