@model BabzRent.ViewModels.BillingViewModels.LocationFormViewModel
@{
    ViewBag.Title = "CreateRentBillsAtLocationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function goBack() {
        window.history.back();
    }
</script>

<br>
<p class="btn btn-primary" onclick="goBack()"><< Back</p>

<h2>CreateRentBillsAtLocationForm</h2>

@using (Html.BeginForm("CreateRentBillsAtLocation", "Billing"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.locationId)
        @Html.DropDownListFor(m => m.locationId, new SelectList(Model.Locations, "Id", "ShortCode"), "Select Location", new { @class = "form-control" })
    </div>
    <p>Upon clicking Submit button below, Rent bills will be generated for all properties with active tenancies at the above location.</p>
    <button type="submit" class="btn btn-primary">Save</button>
}